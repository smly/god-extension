#!/usr/bin/env ruby

$:.unshift File.join(File.dirname(__FILE__), *%w[.. lib])

#load "/usr/bin/god"

#$LOAD_PATH << "lib"
#$LOAD_PATH << "~/src/god/god/lib"
#$LOAD_PATH << "~/src/god/god/"

require 'rubygems'

version = ">= 0"

if ARGV.first =~ /^_(.*)_$/ and Gem::Version.correct? $1 then
  version = $1
  ARGV.shift
end

gem 'god', version
load Gem.bin_path('god', 'god', version)
